<div class="container mt-3">
  <h1>Edit Booking</h1>

  <%= simple_form_for(@booking) do |f| %>
    <div class="form-group">
      <%= f.input :start_date, as: :string,
              input_html: { data: { controller: "datepicker" } } %>
    </div>

    <div class="form-group">
      <%= f.input :end_date, as: :string,
              input_html: { data: { controller: "datepicker" } } %>
    </div>

    <div class="form-group">
      <%= f.input :car_id, as: :hidden %>
    </div>

    <div class="form-group">
      <%= f.button :submit, "Update Booking", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= link_to 'Back', profile_path, class: 'btn btn-secondary mt-3' %>
</div>
