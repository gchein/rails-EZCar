<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <div id="carCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <div class="placeholder-image-carousel d-flex align-items-center justify-content-center">
              Image Placeholder 1
            </div>
          </div>
          <div class="carousel-item">
            <div class="placeholder-image-carousel d-flex align-items-center justify-content-center">
              Image Placeholder 2
            </div>
          </div>
          <div class="carousel-item">
            <div class="placeholder-image-carousel d-flex align-items-center justify-content-center">
              Image Placeholder 3
            </div>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>

      <h1 class="mt-3"><%= @car.year %> <%= @car.brand %> <%= @car.model %></h1>
      <p><strong>Type:</strong> <%= @car.category %></p>
      <p><strong>Color:</strong> <%= @car.color %></p>
      <p><strong>Mileage:</strong> <%= @car.mileage %> km</p>
      <p><strong>Owner:</strong> <%= @car.owner.first_name %> <%= @car.owner.last_name %></p>
      <p><strong>Description:</strong> <%= @car.description %></p>
      <p><strong>Address:</strong> <%= @car.address %></p>
    </div>

    <div class="col-md-4">
      <div class="card p-3">
        <h3 class="mb-3">Make a Booking</h3>
        <%= simple_form_for [@car, @booking] do |f| %>
          <%= f.input :start_date, as: :string, input_html: { data: { controller: "datepicker" } }%>
          <%= f.input :end_date, as: :string, input_html: { data: { controller: "datepicker" } } %>
          <%= f.submit "Make Booking", class: "btn btn-primary w-100 mt-3" %>
        <% end %>
        <span class="btn btn-success text-white mt-3"><strong>$<%= @car.daily_price/100 %> per day</strong></span>
      </div>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-12">
      <h3>Reviews</h3>
      <% @car.reviews.each do |review| %>
        <div class="card mb-3">
          <div class="card-body">
            <p><strong><%= review.user.first_name %> <%= review.user.last_name %></strong></p>
            <p><%= raw star_rating(review.rating) %></p>
            <p><%= review.content %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
