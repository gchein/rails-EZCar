<div class="container" data-controller="searchbar-link" data-searchbar-link-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
  data-searchbar-link-markers-value="<%= @markers.to_json %>">
  <div class="row my-5">
    <%= simple_form_for @car do |f| %>
      <%= f.input :address,
      input_html: {data: {searchbar_link_target: "address"}, class: "d-none"},
      wrapper_html: {data: {searchbar_link_target: "mainSearchbar"}}%>
    <% end %>
  </div>

  <div class="row">
    <div class="col-3">
      <ul>
      <% @cars.each do |car| %>
        <li><%=link_to car.model, car_path(car) %></li>
      <% end %>

      <%= link_to 'List your car for rent!', new_car_path, class: 'btn btn-primary mt-3' %>
    </ul>
    </div>
    <div class="col-9">
      <div style="width: 100%; height: 600px;"
        data-searchbar-link-target="map">
      </div>
    </div>
  </div>
</div>
