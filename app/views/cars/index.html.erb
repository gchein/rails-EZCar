<div class="container mt-3" data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  <div class="row mt-4">
    <div class="col-12 my-3" data-map-target="mainSearch"></div>
    <div class="col-lg-7 col-md-12 mb-4">
      <div class="row" data-map-target="carList">
        <%= render partial: 'cars/car_card', locals: { cars: @cars } %>
      </div>
    </div>
    <div class="col-lg-5 col-md-12">
      <div class="sticky-container">
        <div id="map" class="sticky-map" style="width: 100%; height: 600px;" data-map-target="pageMap"></div>
        <%= link_to 'List your car for rent!', new_car_path, class: 'btn btn-primary mt-3 w-100' %>
      </div>
    </div>
  </div>
</div>
